{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spec.stoked.tech/schemas/common/publisher.json",
  "title": "Publisher",
  "description": "Schema for publisher object used across SPP content types",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Display name of the publisher"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for the publisher (e.g., publisher:name)",
      "pattern": "^publisher:[a-zA-Z0-9._-]+$"
    },
    "uri": {
      "type": "string",
      "format": "uri",
      "description": "URI to the publisher's website or main page"
    },
    "publicKey": {
      "type": "string",
      "description": "Public key for verification (DID format preferred)"
    },
    "contact": {
      "type": "string",
      "description": "Contact information",
      "format": "email"
    },
    "topics": {
      "type": "array",
      "description": "Topics or categories this publisher covers",
      "items": {
        "type": "string"
      }
    },
    "licenses": {
      "type": "array",
      "description": "Supported content licenses",
      "items": {
        "type": "string"
      }
    },
    "trustModel": {
      "type": "string",
      "description": "Trust model used by this publisher",
      "enum": ["editorial-chain", "endorsement", "editorial-chain+endorsement", "community", "algorithmic"]
    }
  },
  "required": ["name", "id", "uri"],
  "additionalProperties": false
}