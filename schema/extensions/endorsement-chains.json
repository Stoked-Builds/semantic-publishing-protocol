{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spec.stoked.tech/schemas/extensions/endorsement-chains.json",
  "title": "Endorsement Chains Extension",
  "description": "Schema for endorsement chains extension in SPP",
  "type": "object",
  "properties": {
    "endorsements": {
      "type": "array",
      "description": "Array of endorsements from trusted entities",
      "items": {
        "type": "object",
        "properties": {
          "endorser": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name of endorser"
              },
              "id": {
                "type": "string",
                "description": "Unique identifier for endorser"
              },
              "uri": {
                "type": "string",
                "format": "uri",
                "description": "Web presence of endorser"
              },
              "type": {
                "type": "string",
                "enum": ["fact-checker", "publisher", "expert", "community"],
                "description": "Type of endorser"
              }
            },
            "required": ["name", "id"],
            "additionalProperties": false
          },
          "endorsed": {
            "type": "string",
            "format": "uri",
            "description": "URI of content being endorsed"
          },
          "verdict": {
            "type": "string",
            "enum": ["accurate", "verified", "corroborated", "referenced", "disputed", "questionable", "false", "misleading"],
            "description": "Endorsement verdict"
          },
          "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Confidence level"
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of endorsement"
          },
          "trust_weight": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0,
            "description": "Weight assigned to this endorser"
          },
          "evidence": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "URLs or identifiers supporting the endorsement"
          },
          "chain_depth": {
            "type": "integer",
            "minimum": 1,
            "description": "Depth in endorsement chain"
          },
          "signature": {
            "type": "string",
            "description": "Cryptographic signature for verification"
          },
          "transitive_endorsements": {
            "type": "array",
            "items": {
              "$ref": "#/properties/endorsements/items"
            },
            "description": "Endorsements that led to this one"
          }
        },
        "required": ["endorser", "verdict", "confidence", "date"],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}