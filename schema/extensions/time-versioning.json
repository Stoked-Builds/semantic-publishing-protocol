{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spec.stoked.tech/schemas/extensions/time-versioning.json",
  "title": "Time-Versioning Extension Schema",
  "description": "Schema for time-versioning extension fields in the Semantic Publishing Protocol",
  "type": "object",
  "properties": {
    "snapshots": {
      "type": "array",
      "description": "Collection of point-in-time snapshots of the content",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp when snapshot was created"
          },
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Semantic version of content at snapshot time"
          },
          "content_hash": {
            "type": "string",
            "pattern": "^[a-z0-9-]+:[a-fA-F0-9]+$",
            "description": "Hash of content at snapshot time (format: algorithm:hash)"
          },
          "archive_url": {
            "type": "string",
            "format": "uri",
            "description": "URL to archived version on external service"
          },
          "archive_provider": {
            "type": "string",
            "description": "Name of archive service (e.g., archive.org, perma.cc)"
          },
          "changes_from_previous": {
            "type": "array",
            "description": "Array of change objects describing differences",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["edit", "addition", "deletion", "restructure"],
                  "description": "Type of change"
                },
                "path": {
                  "type": "string",
                  "description": "JSONPath or selector indicating what changed"
                },
                "description": {
                  "type": "string",
                  "description": "Human-readable description of the change"
                }
              },
              "required": ["type", "description"],
              "additionalProperties": false
            }
          }
        },
        "required": ["timestamp", "version", "content_hash"],
        "additionalProperties": false
      }
    },
    "version_history": {
      "type": "object",
      "description": "Metadata about the content's version history",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of initial creation"
        },
        "last_modified": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of most recent modification"
        },
        "revision_count": {
          "type": "integer",
          "minimum": 1,
          "description": "Total number of revisions made"
        },
        "editorial_notes": {
          "type": "string",
          "description": "Notes about recent changes"
        }
      },
      "required": ["created_at", "last_modified"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}