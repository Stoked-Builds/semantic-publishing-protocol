{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spp.dev/schemas/core/person.json",
  "title": "Person",
  "description": "Schema for person profile content type in SPS",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://spp.dev/schemas/sps-license-metadata.json"
    },
    {
      "properties": {
        "sps_type": {
          "const": "person"
        },
        "profile": {
          "type": "object",
          "description": "Person profile information",
          "properties": {
            "first_name": {
              "type": "string"
            },
            "last_name": {
              "type": "string"
            },
            "display_name": {
              "type": "string"
            },
            "bio": {
              "type": "string",
              "description": "Biography or description"
            },
            "occupation": {
              "type": "string"
            },
            "organization": {
              "type": "string"
            },
            "location": {
              "type": "string",
              "description": "Current location"
            },
            "website": {
              "type": "string",
              "format": "uri"
            },
            "avatar": {
              "type": "string",
              "format": "uri",
              "description": "Profile picture URL"
            }
          },
          "additionalProperties": false
        },
        "social_links": {
          "type": "object",
          "description": "Social media profiles",
          "properties": {
            "twitter": {
              "type": "string",
              "description": "Twitter username (without @)"
            },
            "linkedin": {
              "type": "string",
              "format": "uri"
            },
            "github": {
              "type": "string",
              "description": "GitHub username"
            },
            "mastodon": {
              "type": "string",
              "format": "uri"
            },
            "orcid": {
              "type": "string",
              "pattern": "^\\d{4}-\\d{4}-\\d{4}-\\d{3}[0-9X]$",
              "description": "ORCID identifier"
            }
          },
          "additionalProperties": false
        },
        "credentials": {
          "type": "array",
          "description": "Professional credentials and qualifications",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["degree", "certification", "license", "award", "publication"]
              },
              "title": {
                "type": "string"
              },
              "institution": {
                "type": "string"
              },
              "date_earned": {
                "type": "string",
                "format": "date"
              },
              "expires": {
                "type": "string",
                "format": "date"
              },
              "verification_url": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": ["type", "title"],
            "additionalProperties": false
          }
        },
        "expertise": {
          "type": "array",
          "description": "Areas of expertise or specialization",
          "items": {
            "type": "string"
          }
        },
        "contact_info": {
          "type": "object",
          "description": "Contact information",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": "string"
            },
            "preferred_contact": {
              "type": "string",
              "enum": ["email", "phone", "social", "website"]
            }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}