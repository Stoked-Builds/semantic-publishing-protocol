{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spp.dev/schemas/semantic.json",
  "title": "SPP Artefact (MVSL)",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "type", "title", "language", "content", "links", "provenance", "version"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "type": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "summary": { "type": "string" },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}(-[A-Za-z0-9-]+)?$",
      "description": "ISO 639-1 (optionally BCP 47 for locale)"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "url": { "type": "string", "format": "uri" }
        }
      }
    },
    "published_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "topics": { "type": "array", "items": { "type": "string" } },
    "sections": { "type": "array", "items": { "type": "string" } },
    "media": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["url"],
        "properties": {
          "role": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "credit": { "type": "string" },
          "license": { "type": "string" }
        }
      }
    },
    "content": {
      "type": "object",
      "additionalProperties": false,
      "required": ["format", "value"],
      "properties": {
        "format": { "type": "string", "enum": ["markdown", "html", "text"] },
        "value": { "type": "string" }
      }
    },
    "links": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["rel", "href"],
        "properties": {
          "rel": { "type": "string", "minLength": 1 },
          "href": { "type": "string", "format": "uri" }
        }
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["mode", "source_url", "content_hash"],
      "properties": {
        "mode": { "type": "string", "enum": ["reconstructed", "claimed", "adopted", "authoritative"] },
        "publisher_did": { "type": "string" },
        "adoption": { "type": "object" },
        "source_url": { "type": "string", "format": "uri" },
        "capture_method": { "type": "string" },
        "captured_at": { "type": "string", "format": "date-time" },
        "reconstruction_confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "content_hash": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
        "snapshot_uri": { "type": "string" }
      }
    },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": ["signer", "sig"],
      "properties": {
        "signer": { "type": "string", "minLength": 1 },
        "sig": { "type": "string", "minLength": 1 },
        "signedAt": { "type": "string", "format": "date-time" }
      }
    },
    "version": { "type": "integer", "minimum": 1 },
    "extensions": { "type": "object", "description": "Vendor/experimental fields keyed by namespace" }
  }
}