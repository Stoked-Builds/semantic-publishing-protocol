{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spp.dev/schemas/adoption.json",
  "title": "SPP Adoption",
  "type": "object",
  "additionalProperties": false,
  "required": ["signature"],
  "properties": {
    "artefact_hashes": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
    },
    "manifest_url": { "type": "string", "format": "uri" },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": ["signer", "sig"],
      "properties": {
        "signer": { "type": "string", "minLength": 1 },
        "sig": { "type": "string", "minLength": 1 }
      }
    }
  },
  "oneOf": [
    { "required": ["artefact_hashes"] },
    { "required": ["manifest_url"] }
  ]
}