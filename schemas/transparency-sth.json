{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spp.dev/schemas/transparency-sth.json",
  "title": "SPP Transparency Signed Tree Head",
  "type": "object",
  "additionalProperties": false,
  "required": ["tree_size", "root_hash", "created_at", "signatures"],
  "properties": {
    "tree_size": { "type": "integer", "minimum": 0 },
    "root_hash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "created_at": { "type": "string", "format": "date-time" },
    "anchors": { "type": "array", "items": { "type": "string" } },
    "signatures": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["alg", "sig"],
        "properties": {
          "alg": { "type": "string", "enum": ["ed25519"] },
          "kid": { "type": "string" },
          "sig": { "type": "string" }
        }
      }
    }
  }
}