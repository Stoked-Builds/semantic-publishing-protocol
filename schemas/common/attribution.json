{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://spp.dev/schemas/common/attribution.json",
  "title": "Attribution",
  "description": "Schema for content attribution information",
  "type": "object",
  "properties": {
    "source": {
      "type": "string",
      "description": "Original source of the content",
      "minLength": 1
    },
    "license": {
      "type": "string",
      "description": "Content license (e.g., CC-BY-4.0, MIT, proprietary)",
      "examples": ["CC-BY-4.0", "CC-BY-SA-4.0", "MIT", "proprietary"],
      "minLength": 1,
      "pattern": "^[A-Za-z0-9._-]+$"
    },
    "canonical": {
      "type": "string",
      "format": "uri",
      "description": "Canonical URL for this content"
    },
    "endorsements": {
      "type": "array",
      "description": "List of endorsements for this content",
      "items": {
        "type": "object",
        "properties": {
          "endorser": {
            "type": "string",
            "description": "Identifier of the endorser",
            "minLength": 1
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When the endorsement was made"
          },
          "signature": {
            "type": "string",
            "description": "Cryptographic signature of the endorsement",
            "minLength": 1
          }
        },
        "additionalProperties": false,
        "required": ["endorser", "timestamp"],
        "$comment": "vNext could extend endorsements with richer metadata"
      }
    },
    "archived": {
      "type": "boolean",
      "description": "Whether this content is archived",
      "default": false
    }
  },
  "additionalProperties": false
}