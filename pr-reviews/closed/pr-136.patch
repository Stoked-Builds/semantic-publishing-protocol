+  "type": "object",
+  "additionalProperties": false,
+  "properties": {
+    "endorsements": {
+      "type": "array",
+      "description": "Array of verifiable endorsements with optional delegation chains and confidence scores",
+      "minItems": 1,
+      "uniqueItems": false,
+      "items": {
+        "type": "object",
+        "additionalProperties": false,
+        "properties": {
+          "endorser": {
+            "type": "object",
+            "description": "Optional human-readable endorser details",
+            "additionalProperties": false,
+            "properties": {
